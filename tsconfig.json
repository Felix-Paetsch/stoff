{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": false,
        "allowImportingTsExtensions": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["**/*.ts", "**/*.js", "**/*.d.ts"],
    "exclude": [
        "node_modules",
        "dist",
        "website",
        "Tools/Simulation/StoffGo",
        "Tools/Simulation/StoffPy"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
