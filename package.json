{
    "type": "module",
    "scripts": {
        "dev::server": "tsx --watch DevEnv/DevServer/index.js",
        "dev::server::proxy": "browser-sync start --proxy http://localhost:3008 --files \"DevEnv/DevServer/**\" --port 3009 --no-open",
        "dev::server::tw": "npx @tailwindcss/cli -i ./DevEnv/DevServer/src/input.css -o ./DevEnv/DevServer/public/TWoutput.css --watch",
        "dev::server::development": "concurrently \"npm run dev::server\" \"npm run dev::server::tw\" \"npm run dev::server::proxy\"",
        "dev::standalone": "tsx --watch DevEnv/StandAlone/index.js",
        "tools::go": "(cd ./Tools/StoffGo && go run .)",
        "tools::measure": "node Tools/Measurements/index.js",
        "tools::mvp_dev": "cd Tools/MVPwebsite && npm run dev",
        "tools::mvp_dev_hot": "cd Tools/MVPwebsite && npm run dev_hot",
        "tools::mvp_host": "cd Tools/MVPwebsite && npm run host",
        "docs::build": "cd Docs && make html",
        "docs::hot": "sphinx-autobuild Docs/source Docs/build/html"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.11",
        "@types/express": "^5.0.3",
        "@types/fluent-ffmpeg": "^2.1.27",
        "@types/node": "^24.3.0",
        "autoprefixer": "^10.4.21",
        "browser-sync": "^3.0.4",
        "concurrently": "^9.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "nodemon": "^3.1.10",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.11",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "canvas": "^3.1.2",
        "compression": "^1.8.1",
        "dotenv": "^17.2.1",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "pdf-lib": "^1.17.1",
        "sass": "^1.89.2",
        "uuid": "^11.1.0"
    }
}
